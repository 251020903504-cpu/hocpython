      "source": [
        "n = int(input(\"Nhập số nguyên dương n: \"))\n",
        "\n",
        "tong = 0\n",
        "i = 0            # bắt đầu từ số chẵn đầu tiên\n",
        "\n",
        "while i < n:\n",
        "    tong += i\n",
        "    i += 2       # tăng thêm 2 để luôn đi qua các số chẵn\n",
        "\n",
        "print(\"Tổng các số chẵn nhỏ hơn\", n, \"là:\", tong)"
      ]
